{
  "include": [
    "src/**/*"
  ],
  // We don't need to transpile these directories
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "declarationMap": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  }
}
